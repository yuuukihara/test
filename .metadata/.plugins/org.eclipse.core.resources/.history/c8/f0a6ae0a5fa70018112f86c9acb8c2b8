package fefeaeijfoif;

public class Hero extends Character{

	public String name="jjagi" ;
	int hp  ;
	int mp ;
	private final int maxhp =50;
	Sword sword;
	static int money;

	public Hero(String name,int hp){
		this.name = name;
		this.hp = hp;
	}
	public Hero(){
	}

	public void run(){
		System.out.println(this.name+"は逃げた");
	}
	public void sleep(){
		this.hp = maxhp;
		System.out.println("ゆうしゃはHPが満タンの"+this.hp+"になった");
	}
	public void sit(int sec){
		this.hp += sec;
		System.out.println("勇者は座った時間分hpを回復したので現在のHPは"+this.hp);
	}
	public void slip(){
		this.hp -= 5;
		System.out.println("勇者はこけて5のダメージを受けた、現在のHP"+this.hp);
	}

	static void setRandomMoney(){
		Hero.money =  (int)(Math.random()*1000);
	}

	public int getHp(){
		return this.hp;
	}
	public void setHp(int hp){
		this.hp = hp;
	}


}
